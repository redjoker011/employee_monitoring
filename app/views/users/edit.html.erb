<section class="section">
  <div class="container">
    <%= render "shared/flash" %>

    <div class="title has-text-centered">Update User</div>

    <%= form_with model: @user, local: true do |f| %>
      <div class="field is-horizontal">
        <div class="field-label">
          <%= f.label :role, "Employee Role", class: "label" %>
        </div>

        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.select :role,  @roles, {}, { class: "select" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <%= f.label :name, "Employee Name", class: "label" %>
        </div>

        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.text_field :name,  { class: "input" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <%= f.label :email, "Employee Email", class: "label" %>
        </div>

        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.email_field :email,  { class: "input" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <%= f.label :leave_credits, "Employee Leave Credits", class: "label" %>
        </div>

        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.number_field :leave_credits, { class: "input" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.submit "Update", class: "button is-link" %>
        </div>

        <div class="control">
          <%= link_to "Cancel", users_path, class: "button is-link is-light" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
